#!/usr/bin/env python

"""Backup script"""

import sys
import subprocess

def main():
  cmd = sys.argv[1]
  if cmd == "russ":
    russ()
  elif cmd == "russp":
    russp()

def russ():
  subprocess.call(["rsync", "-avH", "--delete",
                   "/home/russ/.TaskCoach/tasks.tsk",
                   "/mnt/russp/info/task/tasks.tsk"])

def russp():
  subprocess.call(["rsync", "-avH", "--delete",
                   "/mnt/russp/.keys/",
                   "/mnt/bup/russp.keys/"])

if __name__ == "__main__":
  main()
